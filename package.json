{
  "name": "kodflix",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "12.13.1"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "mongodb": "3.4.0",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-ga": "2.7.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.3.0"
  },
  "scripts": {
    "start": "NODE_ENV=production npm-run-all -s build _start-cold-server",
    "start-dev": "npm-run-all -p start-db start-frontend _start-hot-server",
    "start-both": "npm-run-all -p start-frontend _start-hot-server",
    "start-frontend": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-db": "sudo mongod",
    "_start-hot-server": "nodemon src/backend/server.js",
    "_start-cold-server": "node src/backend/server.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:3001"
}

{
  "name": "kodflix",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "10.14.0"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "express": "~4.16.4",
    "mongodb": "^3.1.9",
    "nodemon": "^1.18.8",
    "npm-run-all": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-ga": "^2.5.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.0.5"
  },
  "scripts": {
    "start": "NODE_ENV=production npm-run-all -s build _start-cold-server",
    "start-dev": "npm-run-all -p start-db start-frontend _start-hot-server",
    "start-both": "npm-run-all -p start-frontend _start-hot-server",
    "start-frontend": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "_start-hot-server": "nodemon src/backend/app.js",
    "start-db": "sudo mongod",
    "_start-cold-server": "node src/backend/app.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "ajv": "^6.5.5"
  },
  "proxy": "http://localhost:3001"
}
